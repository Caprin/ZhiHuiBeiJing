<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.caprin.zhihuibeijing.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/homePage"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/home_selector"
            android:text="首页" />

        <RadioButton
            android:id="@+id/news"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/news_selector"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/smartService"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/smartservice_selector"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/govAffairs"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/govaffairs_selector"
            android:text="政务" />

        <RadioButton
            android:id="@+id/setting"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/setting_selector"
            android:text="设置" />

    </RadioGroup>

</LinearLayout>